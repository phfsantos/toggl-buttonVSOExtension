{
  "manifestVersion": 1,
  "version": "1.3.4",
  "name": "Toggl Pomodoro Time Trcker",
  "id": "TogglButtonPomo",
  "description": "VSTS and toggl.com integration with builtin pomodoro",
  "publisher": "ordepim",
  "baseUri": "https://vso-toggl-pomo.azurewebsites.net",
  "categories": [
    "Plan and track"
  ],
  "icons": {
    "default": "/public/images/apple-touch-icon-128x128.png"
  },
  "tags": [
    "working",
    "track",
    "time management",
    "pomodoro"
  ],
  "content": {
    "license": {
      "path": "license.txt"
    },
    "details": {
      "path": "overview.md"
    }
  },
  "files": [
    {
        "path": "images",
        "addressable": "true" 
    }
  ],
  "links": {
    "home": {
      "uri": "aka.ms/vsoext12"
    },
    "repository": {
      "uri": "https://github.com/GersonDias/toggl-buttonVSOExtension"
    },
    "issues": {
      "uri": "https://github.com/GersonDias/toggl-buttonVSOExtension/issues"
    },
    "support": {
      "uri": "https://github.com/GersonDias/toggl-buttonVSOExtension/issues"
    },
    "learn": {
      "uri": "aka.ms/vsoext12"
    }
  },
  "branding": {
    "color": "rgb(220,235,252)",
    "theme": "light"
  },
  "scopes": [
    "vso.profile",
    "vso.work",
    "vso.work_write"
  ],
  "contributions": [
    {
      "id": "TogglButton",
      "type": "ms.vss-web.action",
      "description": "Track time for this workitem",
      "targets": [
        "ms.vss-work-web.work-item-toolbar-menu"
      ],
      "properties": {
        "text": "Track your time",
        "title": "TogglButton",
        "toolbarText": "Start Time",
        "icon": "images/active-16.png",
        "group": "actions",
        "uri": "TogglButton",
        "registeredObjectId": "TogglButton"
      }
    },
    {
      "id": "TogglButtonForm",
      "targets": [ ".controls" ],
      "type": "ms.vss-web.control",
      "properties": {
        "uri": "TogglButtonForm"
      }
    },
    {  
        "id": "PomoTogglButtonGroup",
        "type": "ms.vss-work-web.work-item-form-group",
        "description": "Pomodoro time tracking integrated with Toggl",
        "targets": [
            "ms.vss-work-web.work-item-form"
        ],
        "properties": {
            "name": "My Group",
            "uri": "TogglButtonForm",
            "height": 600
        }
    }
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ]
}
